{{template "god" .}}
{{ define "title"}}
Users
{{end}}

{{define "content"}}
<div class="row">
    {{$users := index .Data "users"}}

    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-title text-md-center text-xl-left">Users</p>
                <div class="w3-container w3-margin">
                    <div class="w3-container w3-row">
                        <div class="accordion" id="accordionFlushExample">
                            {{range $k,$v := $users }}

                            <div class="accordion-item">
                                <h2 class="accordion-header" id="{{$k}}-headingOne">
                                    <button class="accordion-button" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#item-{{$k}}" aria-expanded="false" aria-controls="item-{{$k}}">
                                        {{index $v 3}}
                                    </button>
                                </h2>

                                <div id="item-{{$k}}" class="accordion-collapse collapse"
                                    aria-labelledby="{{$k}}-headingOne" data-bs-parent="#accordionFlushExample">
                                    <div class="accordion-body">

                                        <div class="input-group input-group-lg mb-4">
                                            <div class="input-group-text">
                                                <label for="">
                                                    ID
                                                </label>
                                            </div>
                                            <input type="text" class="form-control user-id" name="userid"
                                                aria-label="Text input with checkbox" readonly value="{{index $v 0}}">
                                        </div>

                                        <div class="input-group input-group-lg mb-4">
                                            <div class="input-group-text">
                                                <label for="">
                                                    First Name
                                                </label>
                                            </div>
                                            <input type="text" class="form-control"
                                                aria-label="Text input with checkbox" readonly value="{{index $v 1}}">
                                        </div>

                                        <div class="input-group input-group-lg mb-4">
                                            <div class="input-group-text">
                                                <label for="">
                                                    Last Name
                                                </label>
                                            </div>
                                            <input type="text" class="form-control"
                                                aria-label="Text input with checkbox" readonly value="{{index $v 2}}">
                                        </div>

                                        <div class="input-group input-group-lg mb-4">
                                            <div class="input-group-text">
                                                <label for="">
                                                    Email
                                                </label>
                                            </div>
                                            <input type="text" class="form-control"
                                                aria-label="Text input with checkbox" readonly value="{{index $v 3}}">
                                        </div>

                                        <div class="input-group input-group-lg mb-4">
                                            <div class="input-group-text">
                                                <label for="">
                                                    Phone
                                                </label>
                                            </div>
                                            <input type="text" class="form-control"
                                                aria-label="Text input with checkbox" readonly value="{{index $v 4}}">
                                        </div>

                                        <div class="input-group input-group-lg mb-4">
                                            <div class="input-group-text">
                                                <label for="">
                                                    Access Level
                                                </label>
                                            </div>
                                            <input type="text" class="form-control"
                                                aria-label="Text input with checkbox" readonly value="{{index $v 5}}">
                                        </div>

                                        <div class="d-flex flex-wrap justify-content-between">
                                            <a href="/admin/user/edit?userid={{index $v 0}}"
                                                class="btn btn-primary btn-sm btn-edit-user">
                                                Edit
                                            </a>

                                            <a href="/admin/user/delete?userid={{index $v 0}}"
                                                class="btn btn-danger btn-sm btn-edit-user">
                                                Edit
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{end}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{end}}